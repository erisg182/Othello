<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="unet.pr43545_dnl.unet.othello_android.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/fondo">

    <android.support.constraint.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_editor_absoluteY="0dp"
            app:layout_editor_absoluteX="0dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:ignore="ContentDescription"
            android:layout_margin="10dp"
            android:background="@drawable/title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textColor="@color/colorText"
                android:textSize="50sp"
                android:gravity="center"
                android:text="Othello"
                tools:ignore="HardcodedText" />

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jugar con blancas"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_editor_absoluteY="0dp"
            app:layout_editor_absoluteX="0dp"
            android:onClick="jugar2"
            android:background="@drawable/button"
            android:textColor="@color/colorText"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            tools:ignore="HardcodedText" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jugar con negras"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_editor_absoluteY="0dp"
            app:layout_editor_absoluteX="0dp"
            android:onClick="jugar"
            android:background="@drawable/button"
            android:textColor="@color/colorText"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            tools:ignore="HardcodedText" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instrucciones"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_editor_absoluteY="0dp"
            app:layout_editor_absoluteX="0dp"
            android:onClick="inst"
            android:background="@drawable/button"
            android:textColor="@color/colorText"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.LinearLayoutCompat>
